<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_news_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HerosFragment"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorBackGroundNigth">
    <ProgressBar
        android:id="@+id/simpleProgressBarHerofragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:padding="20dp"
        android:indeterminate="true"/>
    <ListView
        android:id="@+id/listhero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#555252"
        android:dividerHeight="3dp">
    </ListView>


</LinearLayout>